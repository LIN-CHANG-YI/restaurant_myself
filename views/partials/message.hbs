{{#if errors}}
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show text-center mt-3 m-auto" role="alert">
  {{this.message}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}
{{/if}}

